{
  "name": "electron-typescript-react-boilerplate",
  "version": "0.0.1",
  "description": "Electron boilerplate using typescript, react, react-material, redux and redux-saga",
  "main": "main.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test mocha --compilers ts:ts-node/register --recursive --require should --require ./test-setup.ts app/**/*.spec.ts*",
    "test:watch": "npm test -- --watch --watch-extensions tsx,ts",
    "pree2e": "run-if-changed -f app/**/* -c \"npm run dist\"",
    "e2e": "mocha --compilers ts:ts-node/register --recursive --require should test/**/*.spec.ts* -t 100000",
    "dev": "cross-env HOT=1 NODE_ENV=development electron -r ts-node/register ./server.ts",
    "lint": "tslint app/**/*.ts* ./*.ts",
    "lint:fix": "npm run lint -- --fix",
    "coverage": "nyc npm test",
    "dist": "webpack --config webpack.prod.ts",
    "package": "npm run dist && electron-packager ./dist boilerplate --no-prune --out=electron",
    "package:all": "npm run dist && electron-packager ./dist boilerplate --no-prune --all --out=electron",
    "installer:win": "electron-builder \"electron/boilerplate-win32-ia32\" --platform=win --out=\"release\" --config=builder.json",
    "installer:mac": "electron-installer-dmg \"electron/boilerplate-darwin-x64\" boilerplate"
  },
  "keywords": [],
  "author": "el-davo",
  "license": "MIT",
  "devDependencies": {
    "@types/electron": "^1.4.37",
    "@types/enzyme": "^2.7.9",
    "@types/jsdom": "2.0.30",
    "@types/material-ui": "^0.17.16",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.13",
    "@types/react": "^15.0.38",
    "@types/react-dom": "^15.5.1",
    "@types/react-redux": "^4.4.39",
    "@types/react-router": "3.0.4",
    "@types/react-router-redux": "4.0.41",
    "@types/react-tap-event-plugin": "^0.0.30",
    "@types/redux-saga": "^0.10.5",
    "@types/should": "^8.3.0",
    "@types/sinon": "^2.1.3",
    "@types/winston": "^2.3.1",
    "awesome-typescript-loader": "3.0.3",
    "babel-core": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-webpack-plugin": "^0.1.1",
    "clean-webpack-plugin": "^0.1.16",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.0",
    "electron": "^1.6.6",
    "electron-context-menu": "^0.9.0",
    "electron-packager": "^8.6.0",
    "enzyme": "^2.8.2",
    "extract-text-webpack-plugin": "^2.1.0",
    "html-webpack-plugin": "^2.28.0",
    "imagemin-webpack-plugin": "^1.4.4",
    "jsdom": "9.11.0",
    "json-loader": "^0.5.4",
    "material-ui": "^0.18.6",
    "mocha": "^3.2.0",
    "nyc": "^10.2.0",
    "react": "^15.6.1",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^15.6.1",
    "react-hot-loader": "^1.3.1",
    "react-redux": "^5.0.4",
    "react-router": "3.0.2",
    "react-router-redux": "^4.0.8",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.6.0",
    "redux-immutable-state-invariant": "1.2.4",
    "redux-logger": "2.8.1",
    "redux-saga": "^0.14.8",
    "run-if-changed": "^0.0.6",
    "should": "^11.2.1",
    "sinon": "^2.1.0",
    "spectron": "^3.6.2",
    "style-loader": "^0.16.1",
    "ts-node": "^3.0.2",
    "tslint": "^5.1.0",
    "tslint-loader": "^3.5.3",
    "typescript": "2.3.2",
    "webpack": "3.0.0",
    "webpack-dev-server": "^2.4.4",
    "webpack-merge": "^4.1.0",
    "winston": "^2.3.1",
    "write-file-webpack-plugin": "^4.0.2"
  },
  "nyc": {
    "include": [
      "app/**/*.tsx",
      "app/**/*.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "app/**/*.spec.ts*"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "lcov"
    ],
    "all": true,
    "report-dir": "./test_results/coverage"
  }
}
